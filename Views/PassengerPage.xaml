<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:viewmodels="clr-namespace:BusTrackerApp.ViewModels"
             xmlns:models="clr-namespace:BusTrackerApp.Models"
             x:Class="BusTrackerApp.Views.PassengerPage"
             x:DataType="viewmodels:PassengerViewModel"
             Title="Rastreo de Buses en Tiempo Real">

    <Grid RowDefinitions="*,Auto">

        <!-- Mapa -->
        <maps:Map x:Name="map"
                  IsShowingUser="True"
                  MapType="Street">
            <maps:Map.ItemTemplate>
                <DataTemplate x:DataType="models:Bus">
                    <maps:Pin Location="{Binding CurrentLocation}"
                              Label="{Binding BusNumber}"
                              Address="{Binding AssignedRoute.Name}"/>
                </DataTemplate>
            </maps:Map.ItemTemplate>
        </maps:Map>

        <!-- Overlay de carga -->
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          Color="{StaticResource Primary}"
                          WidthRequest="50"
                          HeightRequest="50"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

        <!-- Panel inferior con filtros y lista de buses -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="15"
                StrokeShape="RoundRectangle 20,20,0,0">
            <VerticalStackLayout Spacing="15">

                <!-- Encabezado con tÃ­tulo y botÃ³n de actualizar -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Label Text="Buses en Vivo"
                           FontSize="22"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="1"
                            Text="ðŸ”„"
                            Command="{Binding LoadBusesCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Grid>

                <!-- Selector de Rutas con scroll horizontal -->
                <Label Text="Filtrar por LÃ­nea:"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray600}"/>

                <ScrollView Orientation="Horizontal"
                           HeightRequest="50"
                           HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="8">
                        <!-- BotÃ³n "Todas" -->
                        <Button Text="Todas"
                               Command="{Binding SelectRouteCommand}"
                               CommandParameter="{x:Null}"
                               BackgroundColor="{StaticResource Primary}"
                               TextColor="White"
                               CornerRadius="20"
                               Padding="20,10"
                               FontSize="12"/>

                        <!-- Botones de rutas -->
                        <CollectionView ItemsSource="{Binding AvailableRoutes}"
                                       SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:BusRoute">
                                    <Button Text="{Binding Name}"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PassengerViewModel}}, Path=SelectRouteCommand}"
                                           CommandParameter="{Binding Id}"
                                           BackgroundColor="{Binding Color}"
                                           TextColor="White"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="11"
                                           FontAttributes="Bold"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Contador de buses -->
                <Label TextColor="{StaticResource Gray600}"
                       FontSize="13">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0} bus(es) activo(s) en el mapa">
                            <Binding Path="ActiveBuses.Count"/>
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <!-- Lista de buses activos -->
                <CollectionView ItemsSource="{Binding ActiveBuses}"
                               MaximumHeightRequest="180">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Bus">
                            <Border StrokeThickness="1"
                                   Stroke="{StaticResource Gray200}"
                                   BackgroundColor="{StaticResource Gray100}"
                                   Padding="12"
                                   Margin="0,5"
                                   StrokeShape="RoundRectangle 12">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Border BackgroundColor="{Binding AssignedRoute.Color}"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           StrokeShape="RoundRectangle 25"
                                           VerticalOptions="Center">
                                        <Label Text="ðŸšŒ"
                                              FontSize="24"
                                              HorizontalOptions="Center"
                                              VerticalOptions="Center"/>
                                    </Border>

                                    <VerticalStackLayout Grid.Column="1"
                                                        Spacing="4"
                                                        VerticalOptions="Center">
                                        <Label Text="{Binding BusNumber}"
                                               FontAttributes="Bold"
                                               FontSize="16"/>
                                        <Label Text="{Binding AssignedRoute.Name}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"/>
                                        <Label Text="{Binding LastUpdate, StringFormat='Actualizado: {0:HH:mm:ss}'}"
                                               FontSize="10"
                                               TextColor="{StaticResource Gray500}"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2"
                                                        VerticalOptions="Center"
                                                        Spacing="4">
                                        <Label Text="â—"
                                               TextColor="LimeGreen"
                                               FontSize="20"
                                               HorizontalOptions="Center"
                                               IsVisible="{Binding IsActive}"/>
                                        <Label Text="EN RUTA"
                                              FontSize="9"
                                              FontAttributes="Bold"
                                              TextColor="LimeGreen"
                                              HorizontalOptions="Center"
                                              IsVisible="{Binding IsActive}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Padding="20">
                            <Label Text="ðŸ“­"
                                  FontSize="40"
                                  HorizontalOptions="Center"/>
                            <Label Text="No hay buses activos en esta ruta"
                                  FontSize="14"
                                  TextColor="{StaticResource Gray600}"
                                  HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

                <Button Text="Cerrar SesiÃ³n"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Gray900}"
                        CornerRadius="10"
                        Margin="0,5,0,0"/>

            </VerticalStackLayout>
        </Border>

    </Grid>

</ContentPage>
